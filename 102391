<script>

var xhttp = new XMLHttpRequest();
    xhttp.open("GET", "https://cdn14.esp-cdn.xyz/json/fspar.json?"  + Math.random().toString(36).substring(7), true);
    xhttp.send();
    xhttp.onreadystatechange = function() {
        if (xhttp.readyState == 4 && xhttp.status == 200) {
            var jsonResponse = JSON.parse(xhttp.responseText);
            var xurl = jsonResponse['source'];


                    player = new Clappr.Player({ source: atob(xurl), mimeType: "application/x-mpegURL", autoPlay: false, width: "100%", height: "100%",
                    plugins: [LevelSelector, ChromecastPlugin, ClapprPip.PipButton, ClapprPip.PipPlugin],
                             crossOrigin: "anonymous",

                playInline: true,
                //playbackNotSupportedMessage: "video will be up soon.. please standby",

                chromecast: {
                    appId: "9DFB77C0",
                    contentType: "video/m3u8",
                    media: {
                        type: ChromecastPlugin.Movie,
                        title: "FOX Sports Premium",
                        subtitle: "Mega Deportes"
                    }
                },

                    flushLiveURLCache: false,
                    levelSelectorConfig: {
                       labelCallback: function(playbackLevel, customLabel) {
                           return Math.round(playbackLevel.level.bitrate / 1000) + ' kbps';
                       }
                   },
                         disableVideoTagContextMenu: true,
                    
                            parentId: "#ppp"});

            player.getPlugin('click_to_pause').disable();
                    
        }
    }

</script>
